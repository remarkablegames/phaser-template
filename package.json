    "@parcel/transformer-webmanifest": "^2.2.1",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "eslint": "^8.7.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.1",
    "parcel": "^2.2.1",
    "prettier": "^2.5.1",
    "typescript": "^4.5.5"
  },
  "private": true,
  "license": "MIT"
