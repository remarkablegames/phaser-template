{
  "name": "phaser-template",
  "version": "1.0.0-alpha",
  "description": "A template for building Phaser games.",
  "author": "Mark <mark@remarkablemark.org>",
  "source": "public/index.html",
  "scripts": {
    "build": "parcel build",
    "clean": "rm -rf dist/",
